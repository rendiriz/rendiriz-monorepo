{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rendiriz-ecosystem/personal/components": [
        "libs/personal/components/src/index.ts"
      ],
      "@rendiriz-ecosystem/personal/config": [
        "libs/personal/config/src/index.ts"
      ],
      "@rendiriz-ecosystem/personal/constants": [
        "libs/personal/constants/src/index.ts"
      ],
      "@rendiriz-ecosystem/personal/contexts": [
        "libs/personal/contexts/src/index.ts"
      ],
      "@rendiriz-ecosystem/personal/hooks": [
        "libs/personal/hooks/src/index.ts"
      ],
      "@rendiriz-ecosystem/personal/templates": [
        "libs/personal/templates/src/index.ts"
      ],
      "@rendiriz-ecosystem/personal/utils": ["libs/personal/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
